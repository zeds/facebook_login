<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center">お名前を登録</h1>


    <%= form_with url: names_create_path do |form| %>
      <div class="form-group">
        <%= form.text_field :name, autofocus: true, class: 'form-control' %><br/>
        <%= form.submit "登録", class: 'btn btn-primary btn-block btn-lg' %>
      </div>
    <% end %>

  </div>
</div>
